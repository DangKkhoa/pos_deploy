<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Salespersons</title>
  <!-- Include Bootstrap CSS -->
  <!-- <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"> -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  <!-- <link rel="stylesheet" href="/css/styles.css"> -->
  <style>
    .container {
      margin-top: 20px; /* Add some margin to the top of the container */
      margin-bottom: 100px;
    }
  </style>
</head>
<body>
  <%- include('navbar') %>
  <div id="notificationArea" class="fixed-top w-25 m-2"></div> <!-- Notification area -->
  <div class="container mt-5">
    
    
      
    <h1 class="text-center mb-4">Customers management</h1>
      
    
    <!-- Add Salesperson Form Modal Trigger Button -->
    
    <!-- Salesperson List -->
    <div class="container mt-3">
    
    <h2 class="my-4">Customers </h2>
    <div class="table-responsive">
      <table class="table table-bordered table-hover text-center align-baseline">
        <thead>
          <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Phone</th>
            <th>Address</th>
          </tr>
        </thead>
        <tbody>
          <% customers.forEach(c => { %>
            <tr id="<%= c.customer_id %>">
              <td><%= c.customer_id %></td>
              <td><%= c.name %></td>
              <td><%= c.phone %></td>
              <td><%= c.address %></td>
              
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    </div> 
  </div>




</body>
</html>
